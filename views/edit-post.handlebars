<h2>Edit Your Movie Review</h2>

<h6>{{comment.movie.title}}</h6>
<div>
  {{#times comment.movie_rating}}
    <i class="rating__star fas fa-star"></i>
  {{/times}}
</div>
<img src="{{comment.movie.poster}}" alt="" />

<p>{{comment.comment_text}}</p>

<div>
  <textarea id="comment-text"></textarea>
</div>

<button type="button" class="save-post-btn">Save Post</button>
<button type="button" class="delete-post-btn">Delete Post</button>

<script src="/javascript/edit-blog.js"></script>
<script src="/javascript/delete-blog.js"></script>